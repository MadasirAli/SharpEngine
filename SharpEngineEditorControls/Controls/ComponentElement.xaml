<UserControl x:Class="SharpEngineEditorControls.Controls.ComponentElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SharpEngineEditorControls.Controls"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400"
             Name="Component"
             Background="{StaticResource ElementBackgroundBrush}">
    
    <Grid x:Name="Root">
        <Expander Name="ComponentNameHeader" Header="Component Name Header">
            <hc:SimpleStackPanel Name="FieldsStack" >
            </hc:SimpleStackPanel>
        </Expander>

    </Grid>

    <UserControl.Resources>
        <ResourceDictionary Source="../Themes/Generic.xaml"></ResourceDictionary>
    </UserControl.Resources>
</UserControl>
