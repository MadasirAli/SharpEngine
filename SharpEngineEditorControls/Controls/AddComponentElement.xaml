<UserControl x:Class="SharpEngineEditorControls.Controls.AddComponentElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:SharpEngineEditorControls.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400"
             Background="Transparent">
    <Grid Name="Root">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <hc:TextBox Name="ComponentName" Margin="10"></hc:TextBox>
        <Button Name="AddButton" Grid.Row="1" Width="200">
            <Label Foreground="White" BorderBrush="Transparent" Background="Transparent">Add Component</Label>
        </Button>
        
    </Grid>
    <UserControl.Resources>
        <ResourceDictionary Source="../Themes/Generic.xaml"></ResourceDictionary>
    </UserControl.Resources>
</UserControl>
