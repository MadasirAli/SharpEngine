    </None>
    <None Update="Shaders\DepthVertexShader.hlsl">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Shaders\LightTransformCBuffer.hlsl">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
