    </None>
    <None Update="Shaders\PixelShader.hlsl">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Shaders\ShadowMapping.hlsl">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Shaders\Transformations.hlsl">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
